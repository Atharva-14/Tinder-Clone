<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseLoginRegistrationActivity"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:padding="16dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/tinder_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By clicking Log In, you agree with our Terms. Learn how
we process your data our Privacy Policy and Cookies Policy."
        android:textSize="16dp"
        android:fontFamily="@font/novaflat_regular"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:textColor="#C0C0C0"/>

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        app:backgroundTint="#FFFFFF"
        android:text="Log In with email id"
        android:fontFamily="@font/novaflat_regular"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:paddingBottom="4dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account? "
        android:fontFamily="@font/novaflat_regular"
        android:textColor="@color/black"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignUp"
        android:textColor="#C0C0C0"
        android:fontFamily="@font/novaflat_regular"
        android:textSize="17dp"
        android:textStyle="bold|italic"/>

    </LinearLayout>
</LinearLayout>